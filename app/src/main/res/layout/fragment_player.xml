<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="presentation.PlayerFragment">

    <Button
        android:id="@+id/exitButton"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="36dp"
        android:text="@string/exit_from_account"
        android:textColor="@color/text_color_selector"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/albumCover"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:layout_marginTop="120dp"
        android:src="@drawable/cover1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/playerIndicator"
        android:layout_width="350dp"
        android:layout_height="20dp"
        android:layout_marginTop="140dp"
        android:src="@drawable/progressbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/albumCover" />

    <ImageButton
        android:id="@+id/playButton"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginTop="16dp"
        android:background="?selectableItemBackground"
        android:scaleType="fitXY"
        android:src="@drawable/play_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/playerIndicator"
        tools:ignore="MissingConstraints" />

    <ImageButton
        android:id="@+id/previousButton"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="10dp"
        android:background="?selectableItemBackground"
        android:scaleType="fitXY"
        android:src="@drawable/next_icon"
        app:layout_constraintBottom_toBottomOf="@+id/playButton"
        app:layout_constraintEnd_toStartOf="@+id/playButton"
        app:layout_constraintTop_toTopOf="@+id/playButton"
        tools:ignore="MissingConstraints" />

    <ImageButton
        android:id="@+id/nextButton"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="?selectableItemBackground"
        android:scaleType="fitXY"
        android:scaleX="-1"
        android:src="@drawable/next_icon"
        app:layout_constraintBottom_toBottomOf="@+id/playButton"
        app:layout_constraintStart_toEndOf="@+id/playButton"
        app:layout_constraintTop_toTopOf="@+id/playButton"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/performerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="sans-serif-black"
        android:text="@string/performer"
        android:textSize="17sp"
        app:layout_constraintBottom_toTopOf="@+id/playerIndicator"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/songName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:fontFamily="sans-serif-black"
        android:text="@string/song"
        android:textColor="@color/text_color_selector"
        android:textSize="21sp"
        app:layout_constraintBottom_toTopOf="@+id/performerText"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/timeCurrent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/_3_54"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/playerIndicator"
        app:layout_constraintTop_toBottomOf="@+id/playerIndicator"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/timeFull"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/_4_10"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/playerIndicator"
        app:layout_constraintTop_toBottomOf="@+id/playerIndicator"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>